@using HR_System.Models
@using HR_System.ViewModels 

@model  List<SalaryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   
  

    <h1>Index</h1>

    @foreach( var i in ViewBag.sal){


    <div> Emp Name :  @i.employeeName </div>
    <div> Sal : @i.fixedSalary </div>
    <div> Department : @i.departmentName </div>
    <div> Attendence Day : @i.attendenceDays </div>
    <div> Abscense Day : @i.abscenseDays </div>
    <div> Bonus : @i.BonusHours </div>
    <div> Minus   @i.MinusHours </div>

    <div> Total Bonus  @i.TotalBonus </div>
    <div> Minus Bonus  @i.TotalMinus </div> 

       <div> Net Salary : @i.NetSalary </div>

    <br /> <br />
    

        <a asp-action="invoice" asp-controller="Salary" 
        asp-route-empName="@i.employeeName" asp-route-fixedSalary="@i.fixedSalary" 
        asp-route-departmentName="@i.departmentName" asp-route-attendenceDays="@i.attendenceDays"
        asp-route-abscenseDays="@i.abscenseDays" 
         asp-route-BonusHours="@i.BonusHours"  asp-route-MinusHours="@i.MinusHours"
          asp-route-TotalBonus="@i.TotalBonus"  asp-route-TotalMinus="@i.TotalMinus"  
           asp-route-NetSalary="@i.NetSalary"> Invoice </a>
    }
        
    
   

