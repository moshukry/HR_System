@model List<Employee>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].FixedSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].AttTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DepartureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Dept)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FixedSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dept.DeptName)
                </td>
                <td>
                    <a asp-action="details" asp-route-id="@item.EmpId" class="btn btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.EmpId" class="btn btn-success">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmpId" class="btn btn-danger" onclick = "return confirm('Are You Sure to delete '+'@item.EmpName '+'?')"><i class="icon-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
